<div class="row">
  <div class="col-md-12">
    <%= form_for @event, :url => events_path do |f| %>
    <%= f.label :name, "Event name" %>
    <%= f.text_field :name %>
    <%= f.label :description, "Event description" %>
    <%= f.text_area :description, size:"" %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>

    <%= f.submit "Create" %>
    <% end %>
  </div>
</div>

